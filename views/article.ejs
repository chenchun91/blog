<%- include header %>
<div class = "container">
  <div class = "left-sidebar">
    <div style = "text-align: center; padding: 150px 0.5em 1em .5em;">我的头像<hr/></div>
    <ul>
      <li>文章：1</li>
      <li>访问：<%= post.pv %></li>
      <li>评论：<%= post.comments.length %></li> <hr/> 
    </ul>
    
  </div>
  <article class = "contains">
    <h1><%= title %></h1>
    <% if(success){ %>
      <div><%= success %></div>
    <% } %>
    <% if(error){ %>
      <div><%= error %></div>
    <% } %>
<% if(user && (user.name === post.name)){%>
   <span><a class = "edit" href = "/edit/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">编辑</a></span>
   <span><a class = "edit" href = "/remove/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">删除</a></span>
<%}%>
<p class = "info">
    作者：<a href = "/u/<%= post.name %>"><%= post.name %></a> |
    日期：<%= post.time.minute %> |
    标签：
    <% post.tags.forEach(function(tag, index){ %>
      <% if(tag){ %>
        <a class = "tag" href = "/tags/<%= tag %>"><%= tag %></a>
      <% } %>
    <% }) %>
</p>
<p><%- post.post %></p>
<p class = "info">阅读：<%= post.pv %> | 评论：<%= post.comments.length %></p><hr/>
<%- include comment %>
<%- include footer %>
